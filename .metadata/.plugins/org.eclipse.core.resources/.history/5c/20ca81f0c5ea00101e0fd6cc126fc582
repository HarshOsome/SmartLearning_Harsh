
spring.application.name=ApiGateway
server.port=4447

# --- Routes ---
# User Service
spring.cloud.gateway.routes[0].id=user-service
spring.cloud.gateway.routes[0].uri=http://localhost:8081
spring.cloud.gateway.routes[0].predicates[0]=Path=/api/users/**

# Course Service with CircuitBreaker
spring.cloud.gateway.routes[1].id=course-service
spring.cloud.gateway.routes[1].uri=http://localhost:4446
spring.cloud.gateway.routes[1].predicates[0]=Path=/api/courses/**
spring.cloud.gateway.routes[1].filters[0].name=CircuitBreaker
spring.cloud.gateway.routes[1].filters[0].args.name=courseServiceGateway
spring.cloud.gateway.routes[1].filters[0].args.fallbackUri=forward:/fallback/course

# Enrollment Service
spring.cloud.gateway.routes[2].id=enrollment-service
spring.cloud.gateway.routes[2].uri=http://localhost:4445
spring.cloud.gateway.routes[2].predicates[0]=Path=/api/enrollments/**

# Optional: preserve host header if needed
spring.cloud.gateway.default-filters[0].name=PreserveHostHeader

# Optional: logging
logging.level.org.springframework.cloud.gateway=INFO
``
