
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;
import reactor.core.publisher.Mono;

@RestController
public class FallbackController {

    // Match your fallbackUri exactly: forward:/fallback/course
    @GetMapping(path = "/fallback/course", produces = MediaType.APPLICATION_JSON_VALUE)
    public Mono<String> courseFallback() {
        // Keep it lightweight; you can add headers or status codes as needed.
        return Mono.just("{\"message\":\"Course service temporarily unavailable\"}");
    }
}

